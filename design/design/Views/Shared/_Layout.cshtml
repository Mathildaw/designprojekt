<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <header>
            <p style="text-align:center">här ska det vara en bild på det fina huset du vill bo i Emma :D</p>
        </header>
        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                 
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Startsida", "Index", "Home")</li>
                        <li>@Html.ActionLink("Nyheter", "About", "Home")</li>
                        <li>@Html.ActionLink("Felanmälan", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Intresseanmälan", "Index", "Home")</li>
                        <li>@Html.ActionLink("Lediga objekt", "About", "Home")</li>
                        <li>@Html.ActionLink("Våra fastigheter", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Frågor och svar", "Index", "Home")</li>
                        <li>@Html.ActionLink("Kontakta oss", "About", "Home")</li>
                        <li>@Html.ActionLink("Om oss", "Contact", "Home")</li>
                    </ul>
                   
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div class="footerinfo" style="margin:auto; text-align: center;">
                    <p>Kontaktinformation</p>
                    @Html.ActionLink("Admin", "Login", "Account")
                </div>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
