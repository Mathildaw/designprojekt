@using design.Controllers;
@using design.Models;
@using System.Collections.Generic;
@{
    ViewBag.Title = "Varafastigheter";
}
@{
    List<String> m = new List<string>();
    m.Add("123 543, Rynningegatan 7");
    m.Add("145 432, Rynningegatan 8");

   List<String> bilder = new List<string>();
    bilder.Add("bild 1");
    bilder.Add("bild 2");
    bilder.Add("bild 3");

}
<center><h2 class="sidrubrik">Lediga objekt</h2></center>

<div class="maincontainer1">
    <div class="maincontainer row ontop">
        <legend style="color:#e93523;">Administrera objekt</legend>
        <div class="" style=" width:280px;">
            <label>Sök på adress eller hyr-id</label>
            <div class="input-group stylish-input-group">

                <input type="text" class="form-control" placeholder="Sök">
                <span class="input-group-addon">
                    <button type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </div>
        <br />
        <select class="list-group" id="objekt" name="objekt" multiple="multiple" style="width:800px">
            @foreach (string s in m)
            {
                <option id="objekt" class="list-group-item" value="@s">@s</option>
            }
        </select>

        <div class=" row" style="background-color:#dcdcdc;">
            
            <div class=" col-md-3 col-lg-3" >
                <div class="falt">

                    <label>
                        Hyr-id:
                    </label>
                    <div class="input-group">
                        <input name="state" placeholder="" class="form-control" type="text">
                    </div>
                </div>
                <div class="falt">
                    <label>Adress:</label>
                    <div class="input-group">
                        <input name="state" required placeholder="" class="form-control" type="text">
                    </div>
                </div>
                <div class="falt">

                    <label>
                        Ledigt från:
                    </label>
                    <div class="input-group">
                        <input name="state" placeholder="" class="form-control" type="date" style="width:205px;" >
                    </div>
                </div>
                <div class="falt">

                    <label>
                        Stad:
                    </label>
                    <div class="input-group">
                        <input name="state" placeholder="" class="form-control" type="text">
                    </div>
                </div>
                    <div class="falt">
                     
                        <label>
                            Område:
                        </label>
                        <div class="input-group">
                            <input name="state" placeholder="" class="form-control" type="text">
                        </div>
                    </div>

               

                    <div class="falt">
                        <label>Typ av objekt:</label>
                        <div class="input-group">
                            <input name="deltagareinput" placeholder="Lägenhet" class="form-control input-md" type="text">
                        </div>
                    </div>
                <div class="falt">
                    <label>Bredband:</label>
                    <div class="input-group">
                        <input name="deltagareinput" placeholder="Lägenhet" class="form-control input-md" type="text">
                    </div>
                </div>
               
            </div>
            <div class=" col-md-3 col-lg-3">
                <div class="falt">

                    <label>
                        Våning:
                    </label>
                    <div class="input-group">
                        <input name="state" placeholder="" class="form-control" type="text">
                    </div>
                </div>
                <div class="falt">
                    <label>Hyra:</label>
                    <div class="input-group">
                        <input name="state" required placeholder="" class="form-control" type="text">
                    </div>
                </div>
                <div class="falt">

                    <label>
                        Yta:
                    </label>
                    <div class="input-group">
                        <input name="state" placeholder="" class="form-control" type="date" style="width:205px;">
                    </div>
                </div>
                <div class="falt">

                    <label>
                        Antal rum:
                    </label>
                    <div class="input-group">
                        <input name="state" placeholder="" class="form-control" type="text">
                    </div>
                </div>
                <div class="falt">

                    <label>
                       Övrigt:
                    </label>
                    <div class="input-group">
                        <input name="state" placeholder="" class="form-control" type="text">
                    </div>
                </div>

                <div class="falt">
                    <label>Fritext:</label>
                    <div class="input-group">
                        <textarea class="form-control" name="comment" placeholder="Övrig information" style="height:100px; width:205px;"></textarea>
                    </div>
                </div>
             

            </div>
            <div class=" col-md-5">


                <div class="row falt">

                    <div class="col-md-7 col-lg-6" style="padding-right: 0px;">

                        <div class="">
                            <label>Bild:</label>
                            <div class=" input-group">
                                <input name="state" placeholder="" class="form-control" style="border-radius:0px;" type="text">
                            </div>
                        </div>
                    </div>
                    <div class=" col-md-3 col-lg-3" style="padding-left:0px;">

                        <label style="color:transparent">.</label>
                        <button type="submit" class="btn btn-default">Hämta bild <span class="glyphicon glyphicon-file"></span></button>
                    </div>
                    <div class=" col-md-5 col-lg-6">

                        <button type="submit" class="btn btn-primary btn-sm" style="margin-top:5px;">Lägg till bild <span class="glyphicon glyphicon-arrow-down"></span></button>
                        <label>Uppladdade bilder</label>
                        <select class="list-group" id="objekt" name="objekt" multiple="multiple" style="width:205px; height: 100px; margin-bottom:5px;" >
                            @foreach (string b in bilder)
            {
                    <option id="objekt" class="list-group-item" value="@b">@b</option>
            }
                        </select>
                        
                        <button type="submit" class="btn btn-danger btn-sm">Ta bort bild <span class="glyphicon glyphicon-trash"></span></button>
                    </div>
                </div>
                <div class="row falt">

                    <div class=" col-md-7 col-lg-6" style="padding-right:0px;">
                        <div class="">
                            <label>Länk till karta:</label>
                            <div class="input-group">
                                <input name="state" placeholder="" class="form-control" type="text">
                            </div>
                        </div>
                    </div>
                    <div class=" col-md-5 col-lg-5" style="padding-left:0px;">
                        <br />
                        <br />

                        <a href="https://goo.gl/maps/gvNVpwmYs5n" target="_blank"> Öppna google maps</a>
                    </div>


                </div>
                <div class="col-md-10 col-lg-7" style="padding-left:0px;">
                    <label>Ledig:</label><br />
                    <form>
                        <input type="radio" name="val" value="Ja"> Ja
                        <input type="radio" name="val" value="Nej" checked> Nej<br />

                    </form>
                </div>

                <div class=" col-md-5 col-lg-6" style="margin-top:25px; padding-left:0px;">

                    <button type="submit" class="btn btn-success">Spara objekt <span class="glyphicon glyphicon-floppy-saved"></span></button>

                </div>
            </div>
             
               
            
        </div>
        <hr style="border-top: 1px solid #e5e5e5;"/>
        <br />
        <br />
    
    </div>
    </div>
        
